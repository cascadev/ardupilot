<Window x:Class="BrowserAccessAuthenticator.Views.NotificationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification"
        Height="200" Width="400"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border x:Name="MainBorder" CornerRadius="10"
            BorderThickness="1" BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" x:Name="HeaderBorder" CornerRadius="10,10,0,0" Padding="15,12">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TypeIcon" Text="ℹ" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TitleText" Text="Notification"
                                   FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right"
                            Width="24" Height="24" FontSize="12"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Message -->
            <Border Grid.Row="1" Background="White" Padding="15">
                <TextBlock x:Name="MessageText" Text="Notification message here..."
                           TextWrapping="Wrap" FontSize="13"
                           Foreground="#333333"/>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,10,10" Padding="15,10">
                <Grid>
                    <TextBlock Text="Browser Access Management System"
                               FontSize="10" Foreground="#999999"
                               VerticalAlignment="Center"/>
                    <Button Content="OK" HorizontalAlignment="Right"
                            Padding="20,6" FontSize="12"
                            Background="{StaticResource PrimaryBrush}" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            Click="OkButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
