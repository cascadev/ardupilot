<Window x:Class="BrowserAccessAuthenticator.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Browser Access Authenticator - Login"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Browser Access Authenticator"
                               Foreground="White" FontWeight="SemiBold"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Content="âœ•" HorizontalAlignment="Right"
                            Width="40" Height="40"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="16"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Row="0" Width="80" Height="80" CornerRadius="40"
                        Background="{StaticResource PrimaryBrush}" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ”’" FontSize="40"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Grid.Row="1" Text="Welcome Back"
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Text="Please login to access internet"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Username -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             KeyDown="Input_KeyDown"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="4" Margin="0,0,0,20">
                    <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBoxStyle}"
                                 KeyDown="Input_KeyDown"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Grid.Row="5" x:Name="ErrorMessage"
                           Foreground="{StaticResource DangerBrush}"
                           TextWrapping="Wrap" Margin="0,0,0,15"
                           Visibility="Collapsed"/>

                <!-- Login Button -->
                <Button Grid.Row="6" x:Name="LoginButton"
                        Content="LOGIN"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Top"
                        Click="LoginButton_Click"/>

                <!-- Footer -->
                <TextBlock Grid.Row="7"
                           Text="Â© 2024 Casca E-Connect Private Limited"
                           FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" Grid.RowSpan="2"
                    Background="#80000000" Visibility="Collapsed"
                    CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Authenticating..." Foreground="White"
                               FontSize="16" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
