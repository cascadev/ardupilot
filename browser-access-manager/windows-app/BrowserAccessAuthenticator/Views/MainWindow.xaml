<Window x:Class="BrowserAccessAuthenticator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Browser Access Authenticator"
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="Window_Closing">

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10"
            BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="9,9,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Browser Access Authenticator"
                               Foreground="White" FontWeight="SemiBold"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="â”€" Width="40" Height="40"
                                Background="Transparent" Foreground="White"
                                BorderThickness="0" FontSize="14"
                                Click="MinimizeButton_Click"/>
                        <Button Content="âœ•" Width="40" Height="40"
                                Background="Transparent" Foreground="White"
                                BorderThickness="0" FontSize="16"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- User Info -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="50" Height="50" CornerRadius="25"
                                Background="{StaticResource PrimaryBrush}">
                            <TextBlock Text="ðŸ‘¤" FontSize="24"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameText" Text="Loading..."
                                       FontSize="18" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="UserIdText" Text=""
                                       FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Status -->
                <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Status" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="StatusText" Text="Connected - Monitoring Active"
                                       FontSize="16" Foreground="{StaticResource SuccessBrush}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1" Width="12" Height="12" CornerRadius="6"
                                x:Name="StatusIndicator" Background="{StaticResource SuccessBrush}"/>
                    </Grid>
                </Border>

                <!-- Statistics -->
                <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Session Time" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="SessionTimeText" Text="00:00:00"
                                       FontSize="20" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Blocked Sites" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="BlockedCountText" Text="0"
                                       FontSize="20" FontWeight="SemiBold"
                                       Foreground="{StaticResource DangerBrush}"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Logout Button -->
                <Button Grid.Row="4" Content="LOGOUT" Click="LogoutButton_Click"
                        Background="{StaticResource DangerBrush}" Foreground="White"
                        Padding="20,12" FontWeight="SemiBold" FontSize="14"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
